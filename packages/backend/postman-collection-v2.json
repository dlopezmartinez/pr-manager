            "description": "Get complete system health status including database, users, sessions, subscriptions, webhooks, and memory metrics"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "AdminSecret {{ADMIN_SECRET}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{API_URL}}/admin/users?page=1&limit=25",
              "host": ["{{API_URL}}"],
              "path": ["admin", "users"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "25"
                },
                {
                  "key": "role",
                  "value": "SUPERUSER",
                  "disabled": true
                },
                {
                  "key": "search",
                  "value": "",
                  "disabled": true
                }
              ]
            },
            "description": "List all users with optional filtering"
          },
          "response": []
        },
        {
          "name": "Get User Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "AdminSecret {{ADMIN_SECRET}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{API_URL}}/admin/users/{{USER_ID}}",
              "host": ["{{API_URL}}"],
              "path": ["admin", "users", "{{USER_ID}}"]
            },
            "description": "Get detailed information about a specific user"
          },
          "response": []
        },
        {
          "name": "Change User Role",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "AdminSecret {{ADMIN_SECRET}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"role\": \"ADMIN\"\n}"
            },
            "url": {
              "raw": "{{API_URL}}/admin/users/{{USER_ID}}/role",
              "host": ["{{API_URL}}"],
              "path": ["admin", "users", "{{USER_ID}}", "role"]
            },
            "description": "Change user role to USER, ADMIN, or SUPERUSER"
          },
          "response": []
        },
        {
          "name": "Suspend User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "AdminSecret {{ADMIN_SECRET}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"Suspicious activity detected\"\n}"
            },
            "url": {
              "raw": "{{API_URL}}/admin/users/{{USER_ID}}/suspend",
              "host": ["{{API_URL}}"],
              "path": ["admin", "users", "{{USER_ID}}", "suspend"]
            },
            "description": "Suspend a user account. Automatically revokes all active sessions."
          },
          "response": []
        },
        {
          "name": "Unsuspend User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "AdminSecret {{ADMIN_SECRET}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": {
              "raw": "{{API_URL}}/admin/users/{{USER_ID}}/unsuspend",
              "host": ["{{API_URL}}"],
              "path": ["admin", "users", "{{USER_ID}}", "unsuspend"]
            },
            "description": "Reactivate a suspended user account"
          },
          "response": []
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "AdminSecret {{ADMIN_SECRET}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{API_URL}}/admin/users/{{USER_ID}}",
              "host": ["{{API_URL}}"],
              "path": ["admin", "users", "{{USER_ID}}"]
            },
            "description": "Soft-delete a user (marks as inactive and revokes all sessions)"
          },
          "response": []
        }
      ]
    },

---
import AppMockup from './mockups/AppMockup.astro';
import MockQuickActions from './mockups/MockQuickActions.astro';
import MockNotification from './mockups/MockNotification.astro';
---

<section id="features" class="relative py-24 md:py-32 px-6" aria-labelledby="features-heading">
  <!-- Top border - Decorative -->
  <div class="absolute top-0 inset-x-0 h-px bg-gradient-to-r from-transparent via-white/10 to-transparent" aria-hidden="true"></div>

  <div class="max-w-7xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16 md:mb-20">
      <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-white/5 border border-white/10 text-xs text-slate-300 uppercase tracking-wider mb-6 animate-on-scroll">
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
        </svg>
        Features
      </div>
      <h2 id="features-heading" class="text-3xl md:text-5xl font-black mb-4 text-white animate-on-scroll">
        Everything you need to<br class="hidden sm:block"/>
        <span class="gradient-text">manage PRs</span>
      </h2>
      <p class="text-slate-300 text-base md:text-lg max-w-xl mx-auto animate-on-scroll">
        One app. All your repositories. Zero context switching.
      </p>
    </div>

    <!-- Bento Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 stagger-children">

      <!-- Main Feature: Dashboard -->
      <div class="glass-card feature-card rounded-2xl md:rounded-3xl p-6 md:p-8 lg:col-span-2 lg:row-span-2 animate-on-scroll">
        <div class="flex flex-col h-full">
          <div class="mb-6">
            <div class="w-10 h-10 md:w-12 md:h-12 rounded-xl bg-primary/10 flex items-center justify-center text-primary mb-4">
              <svg class="w-5 h-5 md:w-6 md:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"/>
              </svg>
            </div>
            <h3 class="text-xl md:text-2xl font-bold text-white mb-2">Unified Dashboard</h3>
            <p class="text-slate-300 text-sm md:text-base">All your PRs from GitHub and GitLab in one beautiful interface.</p>
          </div>
          <div class="mt-auto" data-parallax="0.2">
            <AppMockup variant="feature" />
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="glass-card feature-card rounded-2xl md:rounded-3xl p-6 md:p-8 animate-on-scroll">
        <div class="w-10 h-10 md:w-12 md:h-12 rounded-xl bg-emerald-500/10 flex items-center justify-center text-emerald-400 mb-4">
          <svg class="w-5 h-5 md:w-6 md:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
        </div>
        <h3 class="text-lg md:text-xl font-bold text-white mb-2">Quick Actions</h3>
        <p class="text-slate-300 text-sm mb-5">Approve, reject, or comment without leaving the menubar.</p>
        <MockQuickActions size="sm" />
      </div>

      <!-- Notifications -->
      <div class="glass-card feature-card rounded-2xl md:rounded-3xl p-6 md:p-8 animate-on-scroll">
        <div class="w-10 h-10 md:w-12 md:h-12 rounded-xl bg-accent/10 flex items-center justify-center text-accent mb-4">
          <svg class="w-5 h-5 md:w-6 md:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
          </svg>
        </div>
        <h3 class="text-lg md:text-xl font-bold text-white mb-2">Smart Notifications</h3>
        <p class="text-slate-300 text-sm mb-4">Get alerted only when you need to act.</p>
        <div class="space-y-2 -mx-2">
          <MockNotification type="review" title="Review requested" description="feat: Add dark mode" timeAgo="2m" isUnread={true} />
          <MockNotification type="ci" title="CI Passed" description="fix: Memory leak" timeAgo="5m" />
        </div>
      </div>

      <!-- Multi-Provider -->
      <div class="glass-card feature-card rounded-2xl md:rounded-3xl p-6 md:p-8 animate-on-scroll">
        <div class="w-10 h-10 md:w-12 md:h-12 rounded-xl bg-blue-500/10 flex items-center justify-center text-blue-400 mb-4">
          <svg class="w-5 h-5 md:w-6 md:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
        <h3 class="text-lg md:text-xl font-bold text-white mb-2">Multi-Provider</h3>
        <p class="text-slate-300 text-sm mb-5">Works with GitHub, GitLab, and self-hosted instances.</p>
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-lg bg-white/5 border border-white/10 flex items-center justify-center hover:bg-white/10 transition-colors">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="w-10 h-10 rounded-lg bg-white/5 border border-white/10 flex items-center justify-center hover:bg-white/10 transition-colors">
            <svg class="w-5 h-5 text-orange-400" fill="currentColor" viewBox="0 0 24 24">
              <path d="M22.65 14.39L12 22.13 1.35 14.39a.84.84 0 0 1-.3-.94l1.22-3.78 2.44-7.51A.42.42 0 0 1 4.82 2a.43.43 0 0 1 .58 0 .42.42 0 0 1 .11.18l2.44 7.49h8.1l2.44-7.51A.42.42 0 0 1 18.6 2a.43.43 0 0 1 .58 0 .42.42 0 0 1 .11.18l2.44 7.51L23 13.45a.84.84 0 0 1-.35.94z"/>
            </svg>
          </div>
          <span class="text-slate-500 text-xs">+ Self-hosted</span>
        </div>
      </div>

      <!-- Custom Views -->
      <div class="glass-card feature-card rounded-2xl md:rounded-3xl p-6 md:p-8 animate-on-scroll">
        <div class="w-10 h-10 md:w-12 md:h-12 rounded-xl bg-cyan-500/10 flex items-center justify-center text-cyan-400 mb-4">
          <svg class="w-5 h-5 md:w-6 md:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
          </svg>
        </div>
        <h3 class="text-lg md:text-xl font-bold text-white mb-2">Custom Views</h3>
        <p class="text-slate-300 text-sm mb-5">Create filters for labels, authors, and repos.</p>
        <div class="flex flex-wrap gap-2">
          <span class="px-3 py-1.5 bg-primary/20 text-primary text-xs font-medium rounded-lg border border-primary/20">Needs Review</span>
          <span class="px-3 py-1.5 bg-white/5 text-slate-400 text-xs rounded-lg">My PRs</span>
          <span class="px-3 py-1.5 bg-white/5 text-slate-400 text-xs rounded-lg">Team</span>
        </div>
      </div>

      <!-- Menubar -->
      <div class="glass-card feature-card rounded-2xl md:rounded-3xl p-6 md:p-8 animate-on-scroll">
        <div class="w-10 h-10 md:w-12 md:h-12 rounded-xl bg-purple-500/10 flex items-center justify-center text-purple-400 mb-4">
          <svg class="w-5 h-5 md:w-6 md:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
        </div>
        <h3 class="text-lg md:text-xl font-bold text-white mb-2">Menubar App</h3>
        <p class="text-slate-300 text-sm mb-5">Always accessible. One click away.</p>
        <div class="flex items-center justify-between bg-[#1a1a1c] rounded-lg px-3 py-2 border border-white/5">
          <div class="flex items-center gap-2">
            <div class="w-5 h-5 rounded bg-gradient-to-br from-primary to-accent flex items-center justify-center">
              <svg class="w-3 h-3 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="6" cy="6" r="3" fill="currentColor" stroke="none"/>
                <circle cx="18" cy="18" r="3" fill="currentColor" stroke="none"/>
                <path d="M6 9v6c0 2 2 3 4 3h4" stroke-width="2.5"/>
              </svg>
            </div>
            <span class="text-xs text-white font-medium">PR Manager</span>
          </div>
          <span class="w-5 h-5 bg-accent text-white text-[10px] font-bold rounded-full flex items-center justify-center">3</span>
        </div>
      </div>
    </div>

    <!-- Stats -->
    <div class="mt-20 md:mt-24 pt-12 border-t border-white/5">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div class="animate-on-scroll">
          <div class="text-3xl md:text-4xl font-black gradient-text mb-1">10K+</div>
          <div class="text-xs md:text-sm text-slate-400 uppercase tracking-wider">PRs Managed</div>
        </div>
        <div class="animate-on-scroll">
          <div class="text-3xl md:text-4xl font-black gradient-text mb-1">99.9%</div>
          <div class="text-xs md:text-sm text-slate-400 uppercase tracking-wider">Uptime</div>
        </div>
        <div class="animate-on-scroll">
          <div class="text-3xl md:text-4xl font-black gradient-text mb-1">&lt;50ms</div>
          <div class="text-xs md:text-sm text-slate-400 uppercase tracking-wider">Response</div>
        </div>
        <div class="animate-on-scroll">
          <div class="text-3xl md:text-4xl font-black gradient-text mb-1">24/7</div>
          <div class="text-xs md:text-sm text-slate-400 uppercase tracking-wider">Support</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom border - Decorative -->
  <div class="absolute bottom-0 inset-x-0 h-px bg-gradient-to-r from-transparent via-white/10 to-transparent" aria-hidden="true"></div>
</section>

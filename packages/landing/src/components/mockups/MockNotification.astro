---
interface Props {
  type: 'review' | 'comment' | 'merge' | 'ci';
  title: string;
  description: string;
  timeAgo: string;
  isUnread?: boolean;
}

const { type, title, description, timeAgo, isUnread = false } = Astro.props;

const typeConfig = {
  review: {
    bg: 'bg-yellow-500/10',
    text: 'text-yellow-400',
    icon: 'M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z',
    label: 'Review',
  },
  comment: {
    bg: 'bg-primary/10',
    text: 'text-primary',
    icon: 'M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z',
    label: 'Comment',
  },
  merge: {
    bg: 'bg-purple-500/10',
    text: 'text-purple-400',
    icon: 'M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z',
    label: 'Merged',
  },
  ci: {
    bg: 'bg-green-500/10',
    text: 'text-green-400',
    icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
    label: 'CI',
  },
};
---

<div class={`flex items-start gap-3 p-3 rounded-lg ${isUnread ? 'bg-white/5' : ''} hover:bg-white/5 transition-colors cursor-pointer`}>
  <!-- Icon -->
  <div class={`w-8 h-8 ${typeConfig[type].bg} rounded-lg flex items-center justify-center flex-shrink-0`}>
    <svg class={`w-4 h-4 ${typeConfig[type].text}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={typeConfig[type].icon}></path>
    </svg>
  </div>

  <!-- Content -->
  <div class="flex-1 min-w-0">
    <div class="flex items-center gap-2 mb-0.5">
      <span class={`px-1.5 py-0.5 ${typeConfig[type].bg} ${typeConfig[type].text} text-xs font-bold rounded`}>
        {typeConfig[type].label}
      </span>
      {isUnread && <span class="w-2 h-2 bg-primary rounded-full"></span>}
    </div>
    <p class="text-sm text-white font-medium truncate">{title}</p>
    <p class="text-xs text-slate-500 truncate">{description}</p>
  </div>

  <!-- Time -->
  <span class="text-xs text-slate-600 flex-shrink-0">{timeAgo}</span>
</div>

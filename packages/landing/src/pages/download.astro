---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Server-render to read BETA_MODE env var at runtime
export const prerender = false;
---

<Layout title="Download PR Manager" description="Download PR Manager for macOS, Windows, and Linux. Start managing your pull requests today.">
  <Header />
  <main id="main-content" class="pt-32 pb-20 px-6 min-h-screen bg-background">
    <div class="max-w-2xl mx-auto text-center">
      <!-- Loading State -->
      <div id="loading-state">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-primary/10 rounded-full mb-8">
          <svg class="w-10 h-10 text-primary animate-spin" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </div>
        <h1 class="text-3xl font-black text-foreground mb-3">
          Loading...
        </h1>
        <p class="text-foreground-secondary">
          Please wait while we load the downloads.
        </p>
      </div>

      <!-- Public Download State (not logged in) -->
      <div id="public-state" class="hidden">
        <!-- Header Icon -->
        <div class="inline-flex items-center justify-center w-20 h-20 bg-primary/10 rounded-full mb-8">
          <svg class="w-10 h-10 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
          </svg>
        </div>

        <h1 class="text-4xl md:text-5xl font-black text-foreground mb-4">
          Download <span class="gradient-text">PR Manager</span>
        </h1>

        <p class="text-lg text-foreground-secondary mb-12">
          Available for macOS, Windows, and Linux. Free to download, subscription required to unlock all features.
        </p>

        <!-- Channel Selector -->
        <div id="channel-selector-public" class="hidden mb-8">
          <div class="inline-flex items-center gap-2 p-1 rounded-xl bg-card border border-border">
            <button
              id="channel-stable-public"
              class="channel-btn px-4 py-2 rounded-lg text-sm font-medium transition-all bg-primary text-white"
              data-channel="stable"
            >
              Stable
            </button>
            <button
              id="channel-beta-public"
              class="channel-btn px-4 py-2 rounded-lg text-sm font-medium transition-all text-foreground-secondary hover:text-foreground"
              data-channel="beta"
            >
              Beta
            </button>
          </div>
        </div>

        <!-- Download Section -->
        <div class="glass-card rounded-3xl p-10 mb-8">
          <p id="version-text-public" class="text-foreground-muted mb-8">Latest version: Loading...</p>

          <div class="grid sm:grid-cols-2 gap-4 mb-8">
            <!-- macOS Download -->
            <a
              href="#"
              id="download-mac-public"
              class="flex items-center gap-4 p-5 rounded-2xl bg-card border border-border hover:border-primary/50 hover:bg-primary/5 transition-all group"
            >
              <div class="flex-shrink-0 w-14 h-14 bg-primary/10 rounded-xl flex items-center justify-center group-hover:bg-primary/20 transition-colors">
                <svg class="w-8 h-8 text-foreground" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
                </svg>
              </div>
              <div class="text-left">
                <div class="font-bold text-foreground">macOS</div>
                <div class="text-sm text-foreground-muted">Apple Silicon & Intel</div>
              </div>
            </a>

            <!-- Windows Download -->
            <a
              href="#"
              id="download-windows-public"
              class="flex items-center gap-4 p-5 rounded-2xl bg-card border border-border hover:border-primary/50 hover:bg-primary/5 transition-all group"
            >
              <div class="flex-shrink-0 w-14 h-14 bg-primary/10 rounded-xl flex items-center justify-center group-hover:bg-primary/20 transition-colors">
                <svg class="w-8 h-8 text-foreground" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M3 12V6.75l6-1.32v6.48L3 12zm17-9v8.75l-10 .15V5.21L20 3zM3 13l6 .09v6.81l-6-1.15V13zm17 .25V22l-10-1.91V13.1l10 .15z"/>
                </svg>
              </div>

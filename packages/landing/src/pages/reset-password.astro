---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Reset Password - PR Manager" description="Create a new password for your PR Manager account.">
  <Header />
  <main class="pt-32 pb-20 px-6 min-h-screen">
    <div class="max-w-md mx-auto">
      <div class="text-center mb-10">
        <h1 class="text-4xl font-black text-white mb-3">
          Create new password
        </h1>
        <p class="text-slate-400">
          Enter your new password below.
        </p>
      </div>

      <div class="glass-card rounded-3xl p-8">
        <!-- No token message -->
        <div id="no-token-message" class="hidden text-center py-6">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-red-500/10 rounded-full mb-6">
            <svg class="w-8 h-8 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
          <p class="text-slate-300 mb-6">Invalid or missing reset token.</p>
          <a href="/forgot-password" class="text-primary hover:text-primary/80 font-semibold transition-colors">
            Request a new reset link
          </a>
        </div>

        <!-- Reset form -->
        <form id="reset-form" class="space-y-6">
          <div>
            <label for="password" class="block text-sm font-semibold text-slate-300 mb-2">
              New password
            </label>
            <input
              type="password"
              id="password"
              name="password"
              required
              minlength="8"
              class="w-full px-4 py-3.5 rounded-xl bg-white/5 border border-white/10 text-white placeholder-slate-500 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all"
              placeholder="At least 8 characters"
            />
          </div>

          <div>
            <label for="confirm-password" class="block text-sm font-semibold text-slate-300 mb-2">
              Confirm new password
            </label>
            <input
              type="password"
              id="confirm-password"
              name="confirm-password"
              required
              minlength="8"
              class="w-full px-4 py-3.5 rounded-xl bg-white/5 border border-white/10 text-white placeholder-slate-500 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all"
              placeholder="Confirm your password"
            />
          </div>

          <div id="error-message" class="hidden p-4 bg-red-500/10 border border-red-500/20 rounded-xl text-red-400 text-sm">
          </div>

          <div id="success-message" class="hidden p-4 bg-emerald-500/10 border border-emerald-500/20 rounded-xl text-emerald-400 text-sm">
          </div>

          <button
            type="submit"
            id="submit-btn"
            class="w-full py-4 px-6 bg-gradient-to-r from-primary to-accent text-white font-bold rounded-xl hover:shadow-lg hover:shadow-primary/30 transition-all duration-300 disabled:opacity-50 disabled:cursor-not-allowed"
          >
            Reset Password
          </button>
        </form>

        <div class="mt-8 text-center">
          <p class="text-sm text-slate-400">
            Remember your password?
            <a href="/login" class="text-primary hover:text-primary/80 font-semibold transition-colors">Sign in</a>
          </p>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  const API_URL = 'https://api.prmanager.app';

  // Fallback messages for network/unknown errors
  const FALLBACK_MESSAGES = {
    network: 'Unable to connect to the server. Please check your internet connection.',
    server: 'Something went wrong on our end. Please try again later.',
    default: 'Unable to reset password. Please try again.',
  };

  const form = document.getElementById('reset-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const errorMessage = document.getElementById('error-message') as HTMLDivElement;
  const successMessage = document.getElementById('success-message') as HTMLDivElement;
  const noTokenMessage = document.getElementById('no-token-message') as HTMLDivElement;

  // Get token from URL
  const urlParams = new URLSearchParams(window.location.search);
  const token = urlParams.get('token');

  // Check if token exists
  if (!token) {
    form.classList.add('hidden');
    noTokenMessage.classList.remove('hidden');
  }

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    const password = (document.getElementById('password') as HTMLInputElement).value;
    const confirmPassword = (document.getElementById('confirm-password') as HTMLInputElement).value;

    if (!password || !confirmPassword) {
      showError('Please fill in all fields.');
      return;
    }

    if (password.length < 8) {
      showError('Password must be at least 8 characters.');
      return;
    }

    if (password !== confirmPassword) {
      showError('Passwords do not match.');
      return;
    }

    submitBtn.disabled = true;
    submitBtn.textContent = 'Resetting...';
    hideError();
    hideSuccess();

    try {
      const response = await fetch(`${API_URL}/auth/reset-password`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ token, newPassword: password }),
      });

      // Handle server errors
      if (response.status >= 500) {
        showError(FALLBACK_MESSAGES.server);
        resetButton();
        return;
      }

      let data;
      try {
        data = await response.json();
      } catch {
        showError(FALLBACK_MESSAGES.server);
        resetButton();
        return;
      }

      if (!response.ok) {
        // Use message from backend (already user-friendly)
        showError(data.message || FALLBACK_MESSAGES.default);
        resetButton();
        return;
      }

      showSuccess('Your password has been reset successfully. Redirecting to login...');
      submitBtn.textContent = 'Password Reset!';

      // Redirect to login after 2 seconds
      setTimeout(() => {
        window.location.href = '/login';
      }, 2000);
    } catch (error: unknown) {
      // Network error or fetch failed
      if (error instanceof TypeError) {
        showError(FALLBACK_MESSAGES.network);
      } else {
        showError(FALLBACK_MESSAGES.default);
      }
      resetButton();
    }
  });

  function showError(message: string) {
    errorMessage.textContent = message;
    errorMessage.classList.remove('hidden');
  }

  function hideError() {
    errorMessage.classList.add('hidden');
  }

  function showSuccess(message: string) {
    successMessage.textContent = message;
    successMessage.classList.remove('hidden');
  }

  function hideSuccess() {
    successMessage.classList.add('hidden');
  }

  function resetButton() {
    submitBtn.disabled = false;
    submitBtn.textContent = 'Reset Password';
  }
</script>

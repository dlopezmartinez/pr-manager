# Database
DATABASE_URL="postgresql://user:password@localhost:5432/prmanager?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRY="7d"

# LemonSqueezy Configuration
LEMONSQUEEZY_API_KEY="your_api_key_here"
LEMONSQUEEZY_STORE_ID="your_store_id"
LEMONSQUEEZY_VARIANT_MONTHLY="your_monthly_variant_id"
LEMONSQUEEZY_VARIANT_YEARLY="your_yearly_variant_id"
LEMONSQUEEZY_WEBHOOK_SECRET="your_webhook_signing_secret"

# Server Configuration
PORT=3001
NODE_ENV="development"

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:5173,https://prmanager.app"

# Frontend URL (for redirect URLs)
FRONTEND_URL="https://prmanager.app"

# Admin Secret (for testing/development)
# Use this in Postman or testing tools: Authorization: AdminSecret <your-secret>
# Leave empty in production to disable
ADMIN_SECRET_KEY="your-super-secret-admin-key-change-this"

# Email Configuration (Resend)
RESEND_API_KEY="re_xxxxxxxxxxxx"
EMAIL_FROM="PR Manager <noreply@prmanager.app>"
APP_URL="https://prmanager.app"

# Error Tracking (Sentry)
SENTRY_DSN="https://xxxxx@xxxxx.ingest.sentry.io/xxxxx"

# GitHub Release Configuration (for auto-updates proxy)
GITHUB_TOKEN="ghp_xxxxx"              # PAT with 'repo' scope for private releases
GITHUB_REPO_OWNER="dlopezmartinez"    # GitHub repository owner
GITHUB_REPO_NAME="PR-Manager"         # GitHub repository name

---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Welcome to PR Manager! - Purchase Successful">
  <Header />
  <main class="pt-24 pb-16 px-6 min-h-screen bg-gradient-to-b from-brand-50 to-white">
    <div class="max-w-2xl mx-auto text-center">
      <!-- Loading State -->
      <div id="loading-state">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-brand-100 rounded-full mb-6">
          <svg class="w-8 h-8 text-brand-600 animate-spin" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-gray-900 mb-2">
          Verifying your purchase...
        </h1>
        <p class="text-gray-600">
          Please wait while we prepare your downloads.
        </p>
      </div>

      <!-- Success State -->
      <div id="success-state" class="hidden">
        <!-- Success Icon -->
        <div class="inline-flex items-center justify-center w-20 h-20 bg-green-100 rounded-full mb-8">
          <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>

        <h1 class="text-4xl font-bold text-gray-900 mb-4">
          Welcome to PR Manager!
        </h1>

        <p class="text-xl text-gray-600 mb-8">
          Your purchase was successful. Thank you for subscribing!
        </p>

        <!-- Download Section -->
        <div class="bg-white rounded-2xl border border-gray-200 p-8 mb-8 shadow-sm">
          <h2 class="text-2xl font-semibold text-gray-900 mb-2">
            Download the App
          </h2>
          <p id="version-text" class="text-gray-500 mb-6">Version: Loading...</p>

          <div class="grid sm:grid-cols-2 gap-4 mb-6">
            <!-- macOS Download -->
            <a
              href="#"
              id="download-mac"
              class="flex items-center gap-4 p-4 rounded-xl border border-gray-200 hover:border-brand-500 hover:bg-brand-50 transition-colors group"
            >
              <div class="flex-shrink-0 w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center group-hover:bg-white">
                <svg class="w-7 h-7 text-gray-700" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
                </svg>
              </div>
              <div class="text-left">
                <div class="font-semibold text-gray-900">macOS</div>
                <div class="text-sm text-gray-500">Apple Silicon & Intel</div>
              </div>
            </a>

            <!-- Windows Download -->
            <a
              href="#"
              id="download-windows"
              class="flex items-center gap-4 p-4 rounded-xl border border-gray-200 hover:border-brand-500 hover:bg-brand-50 transition-colors group"
            >
              <div class="flex-shrink-0 w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center group-hover:bg-white">
                <svg class="w-7 h-7 text-gray-700" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M3 12V6.75l6-1.32v6.48L3 12zm17-9v8.75l-10 .15V5.21L20 3zM3 13l6 .09v6.81l-6-1.15V13zm17 .25V22l-10-1.91V13.1l10 .15z"/>
                </svg>
              </div>
              <div class="text-left">
                <div class="font-semibold text-gray-900">Windows</div>
                <div class="text-sm text-gray-500">64-bit</div>
              </div>
            </a>
          </div>

          <p class="text-sm text-gray-500">
            Linux users: <a href="#" id="download-linux-deb" class="text-brand-600 hover:underline">Download .deb</a> or <a href="#" id="download-linux-rpm" class="text-brand-600 hover:underline">.rpm</a>
          </p>
        </div>

        <!-- Getting Started -->
        <div class="bg-gray-50 rounded-2xl p-8 text-left">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">
            Getting Started
          </h3>
          <ol class="space-y-3">
            <li class="flex gap-3">
              <span class="flex-shrink-0 w-6 h-6 bg-brand-600 text-white rounded-full flex items-center justify-center text-sm font-medium">1</span>
              <span class="text-gray-700">Download and install the app for your platform</span>
            </li>
            <li class="flex gap-3">
              <span class="flex-shrink-0 w-6 h-6 bg-brand-600 text-white rounded-full flex items-center justify-center text-sm font-medium">2</span>
              <span class="text-gray-700">Sign in with the email you used to purchase</span>
            </li>
            <li class="flex gap-3">
              <span class="flex-shrink-0 w-6 h-6 bg-brand-600 text-white rounded-full flex items-center justify-center text-sm font-medium">3</span>
              <span class="text-gray-700">Connect your GitHub or GitLab account</span>
            </li>
            <li class="flex gap-3">
              <span class="flex-shrink-0 w-6 h-6 bg-brand-600 text-white rounded-full flex items-center justify-center text-sm font-medium">4</span>
              <span class="text-gray-700">Start managing your PRs from the menubar!</span>
            </li>
          </ol>
        </div>

        <!-- Support Link -->
        <p class="mt-8 text-gray-500">
          Need help? Check out our <a href="/docs" class="text-brand-600 hover:underline">documentation</a> or <a href="mailto:support@prmanager.app" class="text-brand-600 hover:underline">contact support</a>.
        </p>
      </div>

      <!-- Auth Required State -->
      <div id="auth-required-state" class="hidden">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-yellow-100 rounded-full mb-6">
          <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-gray-900 mb-2">
          Sign in to download
        </h1>
        <p class="text-gray-600 mb-6">
          Please sign in to access your downloads.
        </p>
        <a
          href="/login?redirect=/success"
          class="inline-flex items-center justify-center px-6 py-3 bg-brand-600 text-white font-medium rounded-xl hover:bg-brand-700 transition-colors"
        >
          Sign In
        </a>
        <p class="mt-4 text-sm text-gray-500">
          Don't have an account? <a href="/signup" class="text-brand-600 hover:underline">Create one</a>
        </p>
      </div>

      <!-- Error State -->
      <div id="error-state" class="hidden">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-red-100 rounded-full mb-6">
          <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-gray-900 mb-2">
          Something went wrong
        </h1>
        <p id="error-message" class="text-gray-600 mb-6">
          Unable to verify your purchase. Please try again.
        </p>
        <a
          href="/pricing"
          class="inline-flex items-center justify-center px-6 py-3 bg-brand-600 text-white font-medium rounded-xl hover:bg-brand-700 transition-colors"
        >
          Return to Pricing
        </a>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  const API_URL = 'https://api.prmanager.app';

  const loadingState = document.getElementById('loading-state') as HTMLDivElement;
  const successState = document.getElementById('success-state') as HTMLDivElement;
  const authRequiredState = document.getElementById('auth-required-state') as HTMLDivElement;
  const errorState = document.getElementById('error-state') as HTMLDivElement;
  const errorMessage = document.getElementById('error-message') as HTMLParagraphElement;
  const versionText = document.getElementById('version-text') as HTMLParagraphElement;

  async function loadDownloads() {
    // Check if user has a token
    const token = localStorage.getItem('pr_manager_token');

    if (!token) {
      // No token - show auth required state
      loadingState.classList.add('hidden');
      authRequiredState.classList.remove('hidden');
      return;
    }

    try {
      // Get download URLs from API
      const response = await fetch(`${API_URL}/checkout/downloads`, {
        headers: {
          'Authorization': `Bearer ${token}`,
        },
      });

      if (!response.ok) {
        if (response.status === 401) {
          // Token invalid - clear and show auth required
          localStorage.removeItem('pr_manager_token');
          localStorage.removeItem('pr_manager_user');
          loadingState.classList.add('hidden');
          authRequiredState.classList.remove('hidden');
          return;
        }

        if (response.status === 403) {
          // No active subscription
          const data = await response.json();
          throw new Error(data.error || 'No active subscription');
        }

        throw new Error('Failed to get downloads');
      }

      const data = await response.json();

      // Update download links
      const downloadMac = document.getElementById('download-mac') as HTMLAnchorElement;
      const downloadWindows = document.getElementById('download-windows') as HTMLAnchorElement;
      const downloadLinuxDeb = document.getElementById('download-linux-deb') as HTMLAnchorElement;
      const downloadLinuxRpm = document.getElementById('download-linux-rpm') as HTMLAnchorElement;

      downloadMac.href = data.downloads.mac;
      downloadWindows.href = data.downloads.windows;
      downloadLinuxDeb.href = data.downloads.linuxDeb;
      downloadLinuxRpm.href = data.downloads.linuxRpm;

      // Update version text
      versionText.textContent = `Version: ${data.version}`;

      // Show success state
      loadingState.classList.add('hidden');
      successState.classList.remove('hidden');
    } catch (error: any) {
      console.error('Load downloads error:', error);
      loadingState.classList.add('hidden');
      errorState.classList.remove('hidden');
      errorMessage.textContent = error.message || 'Unable to load downloads. Please try again.';
    }
  }

  // Load downloads on page load
  loadDownloads();
</script>

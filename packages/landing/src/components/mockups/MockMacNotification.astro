---
interface Props {
  appName?: string;
  title: string;
  subtitle?: string;
  body: string;
  time?: string;
  appIcon?: string;
}

const {
  appName = 'PR Manager',
  title,
  subtitle,
  body,
  time = 'now',
  appIcon
} = Astro.props;
---

<div class="mac-notification">
  <div class="notification-header">
    <div class="app-info">
      {appIcon ? (
        <img src={appIcon} alt={appName} class="app-icon" />
      ) : (
        <div class="app-icon default-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="6" cy="6" r="3" fill="currentColor" stroke="none"/>
            <circle cx="18" cy="18" r="3" fill="currentColor" stroke="none"/>
            <path d="M6 9v6c0 2 2 3 4 3h4" stroke="currentColor" stroke-width="2.5"/>
            <path d="M18 15V9c0-2-2-3-4-3h-1" stroke="currentColor" stroke-width="2.5"/>
          </svg>
        </div>
      )}
      <span class="app-name">{appName}</span>
    </div>
    <span class="notification-time">{time}</span>
  </div>
  
  <div class="notification-content">
    <div class="notification-title">{title}</div>
    {subtitle && <div class="notification-subtitle">{subtitle}</div>}
    <div class="notification-body">{body}</div>
  </div>
</div>

<style>
  .mac-notification {
    background: rgba(30, 30, 30, 0.85);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-radius: 16px;
    padding: 12px 14px;
    width: 360px;
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.4),
      0 0 0 0.5px rgba(255, 255, 255, 0.1) inset;
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', system-ui, sans-serif;
    color: #ffffff;
  }

  .notification-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 8px;
  }

  .app-info {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .app-icon {
    width: 20px;
    height: 20px;
    border-radius: 4px;
  }

  .default-icon {
    background: linear-gradient(135deg, #5865f2 0%, #7c3aed 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 3px;
  }

  .default-icon svg {
    width: 14px;
    height: 14px;
    color: white;
  }

  .app-name {
    font-size: 13px;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.6);
  }

  .notification-time {
    font-size: 12px;
    color: rgba(255, 255, 255, 0.4);
  }

  .notification-content {
    padding-left: 28px;
  }

  .notification-title {
    font-size: 13px;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 2px;
    line-height: 1.3;
  }

  .notification-subtitle {
    font-size: 13px;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.85);
    margin-bottom: 2px;
  }

  .notification-body {
    font-size: 13px;
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Animation for entrance */
  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateX(100px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .mac-notification {
    animation: slideIn 0.3s ease-out;
  }
</style>

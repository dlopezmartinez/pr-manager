---
interface Props {
  size?: 'sm' | 'md';
}

const { size = 'md' } = Astro.props;

const sizeClasses = {
  sm: 'px-3 py-1.5 text-xs gap-1.5',
  md: 'px-4 py-2 text-sm gap-2',
};

const iconSize = size === 'sm' ? 'w-3.5 h-3.5' : 'w-4 h-4';
---

<div class="flex items-center gap-2">
  <!-- Approve Button -->
  <button class={`flex items-center ${sizeClasses[size]} bg-green-500/10 text-green-400 rounded-lg font-medium hover:bg-green-500/20 transition-colors border border-green-500/20`}>
    <svg class={iconSize} fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
    </svg>
    <span>Approve</span>
  </button>

  <!-- Request Changes Button -->
  <button class={`flex items-center ${sizeClasses[size]} bg-red-500/10 text-red-400 rounded-lg font-medium hover:bg-red-500/20 transition-colors border border-red-500/20`}>
    <svg class={iconSize} fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
    </svg>
    <span>Reject</span>
  </button>

  <!-- Comment Button -->
  <button class={`flex items-center ${sizeClasses[size]} bg-primary/10 text-primary rounded-lg font-medium hover:bg-primary/20 transition-colors border border-primary/20`}>
    <svg class={iconSize} fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
    </svg>
    <span>Comment</span>
  </button>
</div>

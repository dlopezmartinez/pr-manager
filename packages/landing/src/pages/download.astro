<script>
  const API_URL = import.meta.env.PUBLIC_API_URL || 'https://api.prmanagerhub.com';

  // States
  const loadingState = document.getElementById('loading-state') as HTMLDivElement;
  const publicState = document.getElementById('public-state') as HTMLDivElement;
  const successState = document.getElementById('success-state') as HTMLDivElement;
  const needsSubscriptionState = document.getElementById('needs-subscription-state') as HTMLDivElement;
  const errorState = document.getElementById('error-state') as HTMLDivElement;

  // Elements
  const welcomeMessage = document.getElementById('welcome-message') as HTMLParagraphElement;
  const versionText = document.getElementById('version-text') as HTMLParagraphElement;
  const checkoutMonthly = document.getElementById('checkout-monthly') as HTMLButtonElement;
  const checkoutYearly = document.getElementById('checkout-yearly') as HTMLButtonElement;
  const needsSubscriptionTitle = document.getElementById('needs-subscription-title') as HTMLHeadingElement;
  const needsSubscriptionMessage = document.getElementById('needs-subscription-message') as HTMLParagraphElement;

  // Check if user came from signup (new account)
  const urlParams = new URLSearchParams(window.location.search);
  const isNewAccount = urlParams.get('new') === 'true';

  // Channel data storage
  interface ChannelData {
    version: string;
    downloads: {
      mac: string | null;
      windows: string | null;
      linuxDeb: string | null;
      linuxRpm: string | null;
    };
    isPrerelease?: boolean;
  }
  let stableData: ChannelData | null = null;
  let betaData: ChannelData | null = null;
  let currentChannel: 'stable' | 'beta' = 'stable';

  function hideAllStates() {
    loadingState.classList.add('hidden');
    publicState.classList.add('hidden');
    successState.classList.add('hidden');
    needsSubscriptionState.classList.add('hidden');
    errorState.classList.add('hidden');
  }

  function showState(state: HTMLDivElement) {
    hideAllStates();
    state.classList.remove('hidden');
  }

  function updateChannelButtons(channel: 'stable' | 'beta', suffix: string = '') {
    const stableBtn = document.getElementById(`channel-stable${suffix}`) as HTMLButtonElement;
    const betaBtn = document.getElementById(`channel-beta${suffix}`) as HTMLButtonElement;

    if (stableBtn && betaBtn) {
      if (channel === 'stable') {
        stableBtn.classList.add('bg-primary', 'text-white');
        stableBtn.classList.remove('text-foreground-secondary', 'hover:text-foreground');
        betaBtn.classList.remove('bg-primary', 'text-white');
        betaBtn.classList.add('text-foreground-secondary', 'hover:text-foreground');
      } else {
        betaBtn.classList.add('bg-primary', 'text-white');
        betaBtn.classList.remove('text-foreground-secondary', 'hover:text-foreground');
        stableBtn.classList.remove('bg-primary', 'text-white');
        stableBtn.classList.add('text-foreground-secondary', 'hover:text-foreground');
      }
    }
  }

  function updateDownloadLinks(data: ChannelData, suffix: string = '') {
    const versionEl = document.getElementById(`version-text${suffix}`) as HTMLParagraphElement;
    const downloadMac = document.getElementById(`download-mac${suffix}`) as HTMLAnchorElement;
    const downloadWindows = document.getElementById(`download-windows${suffix}`) as HTMLAnchorElement;
    const downloadLinuxDeb = document.getElementById(`download-linux-deb${suffix}`) as HTMLAnchorElement;
    const downloadLinuxRpm = document.getElementById(`download-linux-rpm${suffix}`) as HTMLAnchorElement;

    const versionPrefix = suffix === '-public' ? 'Latest version' : 'Version';
    if (versionEl) {
      versionEl.textContent = `${versionPrefix}: ${data.version}${data.isPrerelease ? ' (Beta)' : ''}`;
    }

    // Reset all links
    [downloadMac, downloadWindows].forEach(el => {
      if (el) {
        el.classList.remove('opacity-50', 'pointer-events-none');
        const label = el.querySelector('.text-foreground-muted');
        if (label && el.id.includes('mac')) label.textContent = 'Apple Silicon & Intel';
        if (label && el.id.includes('windows')) label.textContent = '64-bit';
      }
    });

    if (data.downloads.mac && downloadMac) {
      downloadMac.href = data.downloads.mac;
    } else if (downloadMac) {
      downloadMac.classList.add('opacity-50', 'pointer-events-none');
      const label = downloadMac.querySelector('.text-foreground-muted');
      if (label) label.textContent = 'Not available';
    }

    if (data.downloads.windows && downloadWindows) {
      downloadWindows.href = data.downloads.windows;
    } else if (downloadWindows) {
      downloadWindows.classList.add('opacity-50', 'pointer-events-none');
      const label = downloadWindows.querySelector('.text-foreground-muted');
      if (label) label.textContent = 'Not available';
    }

    if (downloadLinuxDeb) {
      if (data.downloads.linuxDeb) {
        downloadLinuxDeb.href = data.downloads.linuxDeb;
        downloadLinuxDeb.classList.remove('opacity-50', 'pointer-events-none');
      } else {
        downloadLinuxDeb.classList.add('opacity-50', 'pointer-events-none');
      }
    }

    if (downloadLinuxRpm) {
      if (data.downloads.linuxRpm) {
        downloadLinuxRpm.href = data.downloads.linuxRpm;
        downloadLinuxRpm.classList.remove('opacity-50', 'pointer-events-none');
      } else {
        downloadLinuxRpm.classList.add('opacity-50', 'pointer-events-none');
      }
    }
  }

  function switchChannel(channel: 'stable' | 'beta', suffix: string = '') {
    currentChannel = channel;
    const data = channel === 'stable' ? stableData : betaData;
    if (data) {
      updateChannelButtons(channel, suffix);
      updateDownloadLinks(data, suffix);
    }
  }

  function setupChannelSelector(suffix: string = '') {
    const selector = document.getElementById(`channel-selector${suffix}`) as HTMLDivElement;
    const stableBtn = document.getElementById(`channel-stable${suffix}`) as HTMLButtonElement;
    const betaBtn = document.getElementById(`channel-beta${suffix}`) as HTMLButtonElement;

    // Show selector only if beta version is different from stable
    if (betaData && stableData && betaData.version !== stableData.version) {
      if (selector) selector.classList.remove('hidden');

      if (stableBtn) {
        stableBtn.addEventListener('click', () => switchChannel('stable', suffix));
      }
      if (betaBtn) {
        betaBtn.addEventListener('click', () => switchChannel('beta', suffix));
      }
    }
  }

  async function loadPublicDownloads() {
    try {
      // Load both channels in parallel
      const [stableResponse, betaResponse] = await Promise.all([
        fetch(`${API_URL}/download/public/stable`),
        fetch(`${API_URL}/download/public/beta`).catch(() => null)
      ]);

      if (!stableResponse.ok) {
        throw new Error('Failed to fetch downloads');
      }

      stableData = await stableResponse.json();

      if (betaResponse && betaResponse.ok) {
        betaData = await betaResponse.json();
      }

      // Update with stable data by default
      if (stableData) {
        updateDownloadLinks(stableData, '-public');
      }

      // Setup channel selector
      setupChannelSelector('-public');

      showState(publicState);
    } catch (error) {
      console.error('Error loading public downloads:', error);
      showState(errorState);
    }
  }

  async function loadAuthenticatedDownloads(token: string) {
    try {
      // Load both channels in parallel
      const [stableResponse, betaResponse] = await Promise.all([
        fetch(`${API_URL}/download/public/stable`),
        fetch(`${API_URL}/download/public/beta`).catch(() => null)
      ]);

      if (!stableResponse.ok) {
        throw new Error('Failed to get downloads');
      }

      stableData = await stableResponse.json();

      if (betaResponse && betaResponse.ok) {
        betaData = await betaResponse.json();
      }

      // Update with stable data by default for both success and trial states
      if (stableData) {
        updateDownloadLinks(stableData, '');
        updateDownloadLinks(stableData, '-trial');
      }

      // Setup channel selectors for both states
      setupChannelSelector('');
      setupChannelSelector('-trial');
    } catch (error) {
      console.error('Load downloads error:', error);
      // Don't fail completely, just show default version
      if (versionText) versionText.textContent = 'Version: Latest';
      const versionTextTrial = document.getElementById('version-text-trial') as HTMLParagraphElement;
      if (versionTextTrial) versionTextTrial.textContent = 'Version: Latest';
    }
  }

  async function checkAccountStatus() {
    const token = localStorage.getItem('pr_manager_token');

    // Not logged in - show public downloads
    if (!token) {
      await loadPublicDownloads();
      return;
    }

    try {
      // Check subscription status
      const statusResponse = await fetch(`${API_URL}/subscription/status`, {
        headers: {
          'Authorization': `Bearer ${token}`,
        },
      });

      if (!statusResponse.ok) {
        if (statusResponse.status === 401) {
          // Token expired - clear and show public
          localStorage.removeItem('pr_manager_token');
          localStorage.removeItem('pr_manager_refresh_token');
          localStorage.removeItem('pr_manager_user');
          await loadPublicDownloads();
          return;
        }
        throw new Error('Failed to check subscription status');
      }

      const status = await statusResponse.json();

      // Load downloads for authenticated users
      await loadAuthenticatedDownloads(token);

      // User has active subscription OR lifetime/superuser access
      if (status.active) {
        // Update welcome message based on status
        if (status.isLifetime) {
          welcomeMessage.textContent = 'You have lifetime access! Download the app to get started.';
        } else if (status.isSuperuser) {
          welcomeMessage.textContent = 'Welcome, superuser! Download the app to get started.';
        } else if (status.isTrialing) {
          const daysLeft = status.trialDaysLeft || 7;
          welcomeMessage.textContent = `Your trial is active (${daysLeft} days left). Download the app to get started.`;
        } else {
          welcomeMessage.textContent = 'Your subscription is active. Download the app to get started.';
        }

        showState(successState);
      } else {
        // User needs to subscribe - but can still download
        if (isNewAccount) {
          needsSubscriptionTitle.innerHTML = 'Account Created!';
          needsSubscriptionMessage.textContent = 'Your account is ready. Download the app and start your free trial when ready.';
        } else {
          needsSubscriptionTitle.innerHTML = 'Download <span class="gradient-text">PR Manager</span>';
          needsSubscriptionMessage.textContent = 'You can download the app now and start your free trial when ready.';
        }
        showState(needsSubscriptionState);
      }
    } catch (error: unknown) {
      console.error('Check account status error:', error);
      // Fallback to public downloads on error
      await loadPublicDownloads();
    }
  }

  async function initiateCheckout(priceId: 'monthly' | 'yearly') {
    const token = localStorage.getItem('pr_manager_token');

    if (!token) {
      window.location.href = '/login?redirect=/download';
      return;
    }

    const btn = priceId === 'monthly' ? checkoutMonthly : checkoutYearly;
    const originalText = btn.textContent;
    btn.disabled = true;
    btn.textContent = 'Redirecting...';

    try {
      const response = await fetch(`${API_URL}/subscription/create-checkout`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${token}`,
        },
        body: JSON.stringify({ priceId }),
      });

      if (!response.ok) {
        const data = await response.json();
        throw new Error(data.message || data.error || 'Failed to create checkout');
      }

      const data = await response.json();

      if (data.url) {
        window.location.href = data.url;
      } else {
        throw new Error('No checkout URL returned');
      }
    } catch (error: unknown) {
      console.error('Checkout error:', error);
      btn.disabled = false;
      btn.textContent = originalText;
      alert(error instanceof Error ? error.message : 'Failed to start checkout. Please try again.');
    }
  }

  // Event listeners
  if (checkoutMonthly) {
    checkoutMonthly.addEventListener('click', () => initiateCheckout('monthly'));
  }
  if (checkoutYearly) {
    checkoutYearly.addEventListener('click', () => initiateCheckout('yearly'));
  }

  // Initial check
  checkAccountStatus();
</script>

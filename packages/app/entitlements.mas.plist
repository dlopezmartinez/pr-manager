<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <!-- App Sandbox (required for Mac App Store) -->
  <key>com.apple.security.app-sandbox</key>
  <true/>

  <!-- Network access (required for GitHub API) -->
  <key>com.apple.security.network.client</key>
  <true/>

  <!-- Hardened Runtime -->
  <key>com.apple.security.cs.allow-jit</key>
  <true/>

  <!-- Read/write to user-selected files (if needed for future features) -->
  <!-- Currently not needed, but keeping commented for reference -->
  <!--
  <key>com.apple.security.files.user-selected.read-write</key>
  <true/>
  -->

  <!-- Don't request camera, microphone, or location access -->
  <!-- These are deliberately omitted as they're not needed -->
</dict>
</plist>

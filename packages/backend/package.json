{
  "name": "@pr-manager/backend",
  "version": "1.0.0",
  "description": "PR Manager Backend API - Authentication and Subscription Management",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "lint": "eslint --ext .ts src/",
    "test": "vitest run",
    "seed:user": "tsx src/cli/seed-user.ts",
    "admin:create-secret": "tsx src/cli/create-admin-secret.ts",
    "admin:secret:list": "tsx src/cli/create-admin-secret.ts list",
    "admin:secret:revoke": "tsx src/cli/create-admin-secret.ts revoke"
  },
  "keywords": [
    "api",
    "subscription",
    "lemonsqueezy",
    "auth"
  ],
  "author": "Daniel Lopez Martinez",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.19.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.6",
    "prisma": "^6.2.1",
    "tsx": "^4.19.2",
    "typescript": "~5.7.3",
    "vitest": "^4.0.17"
  }
}

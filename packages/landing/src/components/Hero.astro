<section class="pt-32 pb-20 px-6">
  <div class="max-w-6xl mx-auto">
    <div class="text-center max-w-3xl mx-auto">
      <div class="inline-flex items-center gap-2 px-4 py-1.5 bg-brand-50 text-brand-700 rounded-full text-sm font-medium mb-6">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-brand-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-brand-500"></span>
        </span>
        Now available for macOS, Windows & Linux
      </div>

      <h1 class="text-5xl md:text-6xl font-bold text-gray-900 leading-tight mb-6">
        Manage PRs from your
        <span class="text-brand-600">menubar</span>
      </h1>

      <p class="text-xl text-gray-600 mb-10 max-w-2xl mx-auto">
        A beautiful desktop app that keeps you on top of your Pull Requests across GitHub and GitLab.
        Never miss a review request again.
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href="#pricing"
          class="px-8 py-4 text-lg font-medium text-white bg-brand-600 rounded-xl hover:bg-brand-700 transition-colors shadow-lg shadow-brand-500/25"
        >
          Start 14-Day Free Trial
        </a>
        <a
          href="#features"
          class="px-8 py-4 text-lg font-medium text-gray-700 bg-white border border-gray-300 rounded-xl hover:bg-gray-50 transition-colors"
        >
          See Features
        </a>
      </div>

      <p class="mt-4 text-sm text-gray-500">No credit card required</p>
    </div>

    <!-- App Screenshot -->
    <div class="mt-16 relative">
      <div class="absolute inset-0 bg-gradient-to-t from-gray-50 to-transparent z-10 pointer-events-none h-32 bottom-0 top-auto"></div>
      <div class="bg-gray-900 rounded-2xl shadow-2xl overflow-hidden border border-gray-800">
        <div class="bg-gray-800 px-4 py-3 flex items-center gap-2">
          <div class="flex gap-1.5">
            <div class="w-3 h-3 rounded-full bg-red-500"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
            <div class="w-3 h-3 rounded-full bg-green-500"></div>
          </div>
          <div class="flex-1 text-center text-sm text-gray-400">PR Manager</div>
        </div>
        <div class="aspect-[16/10] bg-gray-900 flex items-center justify-center text-gray-500">
          <p class="text-lg">App Screenshot Placeholder</p>
        </div>

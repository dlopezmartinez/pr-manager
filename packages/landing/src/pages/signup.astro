---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';

const isBetaMode = import.meta.env.BETA_MODE === 'true';
---

<Layout title="Sign Up - PR Manager" description="Create your PR Manager account and start your free trial.">
  <Header />
  <main id="main-content" class="min-h-screen flex flex-col bg-background">
    <!-- Main Content -->
    <div class="flex-1 flex items-center justify-center px-6 py-20">
      <div class="w-full max-w-[420px]">
        <!-- Title Section -->
        <div class="text-center mb-8">
          <h1 class="text-[40px] font-bold text-foreground mb-3">
            Create your account
          </h1>
          <p class="text-foreground-secondary">
            {isBetaMode ? 'Registro gratuito durante la beta.' : 'Create your account to get started.'}
          </p>
        </div>

        <!-- Form Card -->
        <div class="glass-card rounded-2xl p-8">
          <form id="signup-form" class="space-y-6">
            <!-- Name Field -->
            <div>
              <label for="name" class="block text-sm font-medium text-foreground mb-2">
                Name <span class="text-foreground-muted">(optional)</span>
              </label>
              <input
                type="text"
                id="name"
                name="name"
                autocomplete="name"
                class="input w-full"
                placeholder="John Doe"
              />
            </div>

            <!-- Email Field -->
            <div>
              <label for="email" class="block text-sm font-medium text-foreground mb-2">
                Email address
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                autocomplete="email"
                class="input w-full"
                placeholder="you@example.com"
              />
            </div>

            <!-- Password Field -->
            <div>
              <label for="password" class="block text-sm font-medium text-foreground mb-2">
                Password
              </label>
              <input
                type="password"
                id="password"
                name="password"
                required
                minlength="8"
                autocomplete="new-password"
                class="input w-full"
                placeholder="Minimum 8 characters"
              />
            </div>

            <!-- Error Message -->
            <div id="error-message" class="hidden p-4 bg-error/10 border border-error/20 rounded-lg text-error text-sm" role="alert" aria-live="polite">
            </div>

            <!-- Submit Button -->
            <button
              type="submit"
              id="submit-btn"
              class="w-full py-3 px-6 bg-gradient-to-r from-accent-purple to-accent text-white font-semibold rounded-lg hover:shadow-lg hover:shadow-accent-purple/30 transition-all duration-300 disabled:opacity-50 disabled:cursor-not-allowed"
            >
              Create Account
            </button>
          </form>

          <!-- Sign In Link -->
          <div class="mt-6 text-center">
            <p class="text-sm text-foreground-secondary">
              Already have an account?
              <a href="/login" class="text-accent-purple hover:text-accent-purple/80 font-medium transition-colors ml-1">Sign in</a>
            </p>
          </div>
        </div>

        <!-- Legal Footer -->
        <div class="mt-6 text-center">
          <p class="text-[13px] text-foreground-muted leading-relaxed">
            By creating an account, you agree to our
            <a href="/terms" class="text-accent-purple hover:text-accent-purple/80 transition-colors">Terms of Service</a>
            and
            <a href="/privacy" class="text-accent-purple hover:text-accent-purple/80 transition-colors">Privacy Policy</a>.
          </p>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  const API_URL = import.meta.env.PUBLIC_API_URL || 'https://api.prmanagerhub.com';

  // Fallback messages for network/unknown errors
  const FALLBACK_MESSAGES = {
    network: 'Unable to connect to the server. Please check your internet connection.',
    rateLimit: 'Too many attempts. Please wait a moment and try again.',
    server: 'Something went wrong on our end. Please try again later.',
    default: 'Unable to create account. Please try again.',
  };

  // Redirect authenticated users away from signup page
  const existingToken = localStorage.getItem('pr_manager_token');
  if (existingToken) {
    window.location.href = '/success';
  }

  // Get plan from URL params
  const urlParams = new URLSearchParams(window.location.search);
  const plan = urlParams.get('plan') || 'monthly';

  const form = document.getElementById('signup-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const errorMessage = document.getElementById('error-message') as HTMLDivElement;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    const name = (document.getElementById('name') as HTMLInputElement).value.trim();
    const email = (document.getElementById('email') as HTMLInputElement).value.trim();
    const password = (document.getElementById('password') as HTMLInputElement).value;

    // Basic validation
    if (!email || !password) {
      showError('Please fill in all required fields.');
      return;
    }

    if (password.length < 8) {
      showError('Password must be at least 8 characters.');
      return;
    }

    submitBtn.disabled = true;
    submitBtn.textContent = 'Creating account...';
    hideError();

    try {
      const response = await fetch(`${API_URL}/auth/signup`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          email,
          password,
          name: name || undefined,
        }),
      });

      // Handle rate limiting
      if (response.status === 429) {
        showError(FALLBACK_MESSAGES.rateLimit);
        resetButton();
        return;
      }

      // Handle server errors
      if (response.status >= 500) {
        showError(FALLBACK_MESSAGES.server);
        resetButton();
        return;
      }

      let data;
      try {
        data = await response.json();
      } catch {
        showError(FALLBACK_MESSAGES.server);
        resetButton();
        return;
      }

      if (!response.ok) {
        // Use message from backend (already user-friendly)
        showError(data.message || FALLBACK_MESSAGES.default);
        resetButton();
        return;
      }

      // Store tokens in localStorage (will be used by checkout page)
      localStorage.setItem('pr_manager_token', data.accessToken);
      if (data.refreshToken) {
        localStorage.setItem('pr_manager_refresh_token', data.refreshToken);
      }
      localStorage.setItem('pr_manager_user', JSON.stringify(data.user));

      // Redirect to success page with ?new=true to show "Account Created" message
      window.location.href = '/success?new=true';
    } catch (error: unknown) {
      // Network error or fetch failed
      if (error instanceof TypeError) {
        showError(FALLBACK_MESSAGES.network);
      } else {
        showError(FALLBACK_MESSAGES.default);
      }
      resetButton();
    }
  });

  function showError(message: string) {
    errorMessage.textContent = message;
    errorMessage.classList.remove('hidden');
  }

  function hideError() {
    errorMessage.classList.add('hidden');
  }

  function resetButton() {
    submitBtn.disabled = false;
    submitBtn.textContent = 'Create Account';
  }
</script>

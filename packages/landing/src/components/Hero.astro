<section class="relative pt-40 pb-32 px-6 overflow-hidden">
  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 items-center">
      <!-- Left Content -->
      <div class="lg:col-span-7 z-10">
        <!-- Version Badge -->
        <div class="inline-flex items-center gap-3 px-4 py-2 rounded-full bg-primary/10 border border-primary/20 text-primary text-xs font-black uppercase tracking-[0.2em] mb-8 animate-fade-in">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-primary"></span>
          </span>
          <span>Available for macOS, Windows & Linux</span>
        </div>

        <!-- Main Headline -->
        <h1 class="text-5xl md:text-7xl lg:text-8xl font-black mb-8 leading-[0.95] tracking-tight text-white animate-slide-up">
          Your PRs,<br/>
          <span class="gradient-text">one click away.</span>
        </h1>

        <!-- Subtitle -->
        <p class="text-xl md:text-2xl text-slate-400 max-w-xl mb-12 leading-relaxed animate-slide-up" style="animation-delay: 0.1s;">
          A powerful desktop app that keeps all your Pull Requests from GitHub and GitLab organized in your menubar. Ship faster, stay focused.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-wrap gap-6 animate-slide-up" style="animation-delay: 0.2s;">
          <a
            href="#pricing"
            class="group px-10 py-5 bg-gradient-to-r from-primary to-accent text-white rounded-2xl font-black text-lg flex items-center gap-3 hover:shadow-[0_0_40px_rgba(139,92,246,0.4)] transition-all duration-500 hover:-translate-y-1"
          >
            <svg class="w-6 h-6 group-hover:rotate-12 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            Start 7-Day Free Trial
          </a>
          <a
            href="#features"
            class="px-10 py-5 glass-card text-white rounded-2xl font-bold text-lg flex items-center gap-3 hover:bg-white/10 transition-all duration-300"
          >
            Explore Features
          </a>
        </div>

        <!-- Trust Badges -->
        <div class="mt-10 flex flex-wrap items-center gap-8 text-sm text-slate-500 animate-slide-up" style="animation-delay: 0.3s;">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            No credit card required
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            Cancel anytime
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            Instant setup
          </div>
        </div>
      </div>

      <!-- Right - App Preview -->
      <div class="lg:col-span-5 relative">
        <div class="relative transform rotate-2 hover:rotate-0 transition-transform duration-700 parallax" data-parallax-speed="0.05">
          <!-- Glow Effect -->
          <div class="absolute -inset-10 bg-gradient-to-br from-primary/40 to-accent/40 blur-[100px] rounded-full opacity-60"></div>

          <!-- App Window -->
          <div class="relative glass-card rounded-3xl overflow-hidden shadow-2xl border border-white/10 hover:border-white/20 transition-colors">
            <!-- Window Header -->
            <div class="h-12 border-b border-white/10 flex items-center px-6 bg-white/5">
              <div class="flex gap-2">
                <div class="w-3 h-3 rounded-full bg-red-500/70 hover:bg-red-500 transition-colors cursor-pointer"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-500/70 hover:bg-yellow-500 transition-colors cursor-pointer"></div>
                <div class="w-3 h-3 rounded-full bg-green-500/70 hover:bg-green-500 transition-colors cursor-pointer"></div>
              </div>
              <div class="flex-1 text-center text-sm text-slate-500 font-medium">PR Manager</div>
            </div>

            <!-- App Content -->
            <div class="p-6 space-y-4 bg-dark-100/50">
              <!-- PR Item 1 -->
              <div class="group h-20 bg-white/5 rounded-2xl border border-white/5 flex items-center px-5 gap-4 hover:bg-white/10 hover:border-primary/30 transition-all cursor-pointer">
                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-emerald-400 to-emerald-600 flex items-center justify-center text-white text-sm font-bold">
                  JD
                </div>
                <div class="flex-1 min-w-0">
                  <div class="text-sm font-semibold text-white truncate">feat: Add user authentication</div>
                  <div class="text-xs text-slate-500 flex items-center gap-2 mt-1">
                    <span class="text-emerald-400">+342</span>
                    <span class="text-red-400">-128</span>
                    <span class="text-slate-600">|</span>
                    <span>2 hours ago</span>
                  </div>
                </div>
                <div class="flex items-center gap-2">
                  <span class="px-2 py-1 bg-emerald-500/20 text-emerald-400 text-xs font-bold rounded-full">Approved</span>
                </div>
              </div>

              <!-- PR Item 2 -->
              <div class="group h-20 bg-white/5 rounded-2xl border border-white/5 flex items-center px-5 gap-4 hover:bg-white/10 hover:border-accent/30 transition-all cursor-pointer animate-pulse">
                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-primary to-accent flex items-center justify-center text-white text-sm font-bold">
                  SK
                </div>
                <div class="flex-1 min-w-0">
                  <div class="text-sm font-semibold text-white truncate">fix: Resolve memory leak in worker</div>
                  <div class="text-xs text-slate-500 flex items-center gap-2 mt-1">
                    <span class="text-emerald-400">+45</span>
                    <span class="text-red-400">-12</span>
                    <span class="text-slate-600">|</span>
                    <span>5 minutes ago</span>
                  </div>
                </div>
                <div class="flex items-center gap-2">
                  <span class="px-2 py-1 bg-yellow-500/20 text-yellow-400 text-xs font-bold rounded-full">Review</span>
                </div>
              </div>

              <!-- PR Item 3 -->
              <div class="group h-20 bg-white/5 rounded-2xl border border-white/5 flex items-center px-5 gap-4 hover:bg-white/10 hover:border-blue-500/30 transition-all cursor-pointer">
                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center text-white text-sm font-bold">
                  ML
                </div>
                <div class="flex-1 min-w-0">
                  <div class="text-sm font-semibold text-white truncate">chore: Update dependencies</div>
                  <div class="text-xs text-slate-500 flex items-center gap-2 mt-1">
                    <span class="text-emerald-400">+1,204</span>
                    <span class="text-red-400">-987</span>
                    <span class="text-slate-600">|</span>
                    <span>1 day ago</span>
                  </div>
                </div>
                <div class="flex items-center gap-2">
                  <span class="px-2 py-1 bg-blue-500/20 text-blue-400 text-xs font-bold rounded-full">CI Running</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Parallax effect on scroll
  document.addEventListener('scroll', () => {
    const parallaxElements = document.querySelectorAll('.parallax');
    const scrollY = window.scrollY;

    parallaxElements.forEach((el) => {
      const speed = parseFloat(el.getAttribute('data-parallax-speed') || '0.1');
      const yPos = scrollY * speed;
      (el as HTMLElement).style.transform = `translateY(${yPos}px) rotate(${2 - scrollY * 0.01}deg)`;
    });
  });
</script>

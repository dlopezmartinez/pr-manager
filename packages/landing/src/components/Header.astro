<header class="fixed top-0 left-0 right-0 z-50 border-b border-white/5 bg-dark/40 backdrop-blur-xl">
  <nav class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-3 group">
      <div class="w-10 h-10 bg-gradient-to-br from-primary to-accent rounded-xl flex items-center justify-center shadow-lg shadow-primary/20 group-hover:shadow-primary/40 transition-shadow">
        <!-- Custom PR Manager Logo - Abstract PR merge icon -->
        <svg class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="6" cy="6" r="3" fill="currentColor" stroke="none"/>
          <circle cx="18" cy="18" r="3" fill="currentColor" stroke="none"/>
          <path d="M6 9v6c0 2 2 3 4 3h4" stroke="currentColor" stroke-width="2.5"/>
          <path d="M18 15V9c0-2-2-3-4-3h-1" stroke="currentColor" stroke-width="2.5"/>
        </svg>
      </div>
      <span class="text-2xl font-bold tracking-tight logo-gradient">PR Manager</span>
    </a>

    <!-- Navigation Links -->
    <div class="hidden md:flex items-center gap-10 text-sm font-semibold uppercase tracking-widest text-slate-400">
      <a href="#features" class="hover:text-primary transition-colors duration-300">Features</a>
      <a href="#pricing" class="hover:text-primary transition-colors duration-300">Pricing</a>
      <a href="/success" class="hover:text-primary transition-colors duration-300">Download</a>
    </div>

    <!-- Provider Icons + CTA -->
    <div class="flex items-center gap-6">
      <!-- Git Provider Icons -->
      <div class="hidden sm:flex items-center gap-3">
        <div class="w-9 h-9 rounded-full bg-white/5 border border-white/10 flex items-center justify-center" title="GitHub">
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="w-9 h-9 rounded-full bg-white/5 border border-white/10 flex items-center justify-center" title="GitLab">
          <svg class="w-5 h-5 text-orange-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M22.65 14.39L12 22.13 1.35 14.39a.84.84 0 0 1-.3-.94l1.22-3.78 2.44-7.51A.42.42 0 0 1 4.82 2a.43.43 0 0 1 .58 0 .42.42 0 0 1 .11.18l2.44 7.49h8.1l2.44-7.51A.42.42 0 0 1 18.6 2a.43.43 0 0 1 .58 0 .42.42 0 0 1 .11.18l2.44 7.51L23 13.45a.84.84 0 0 1-.35.94z"/>
          </svg>
        </div>
      </div>

      <!-- Guest Navigation -->
      <div id="guest-nav" class="flex items-center gap-4">
        <a href="/login" class="hidden sm:block text-sm font-medium text-slate-400 hover:text-white transition-colors">
          Sign In
        </a>
        <a
          href="/signup"
          class="px-6 py-2.5 bg-white text-black rounded-full text-sm font-bold hover:bg-primary hover:text-white transition-all duration-300 transform hover:scale-105"
        >
          Start Free
        </a>
      </div>

      <!-- Authenticated Navigation -->
      <div id="auth-nav" class="hidden items-center gap-4">
        <a href="/success" class="text-sm font-medium text-slate-400 hover:text-white transition-colors">
          Downloads
        </a>
        <button
          id="logout-btn"
          class="px-5 py-2 text-sm font-medium text-slate-400 border border-white/20 rounded-full hover:bg-white/10 hover:text-white transition-all"
        >
          Sign Out
        </button>
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="md:hidden p-2 text-slate-400 hover:text-white">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-white/5 bg-dark/95 backdrop-blur-xl">
    <div class="px-6 py-4 space-y-4">
      <a href="#features" class="block text-sm font-semibold text-slate-400 hover:text-white transition-colors">Features</a>
      <a href="#pricing" class="block text-sm font-semibold text-slate-400 hover:text-white transition-colors">Pricing</a>
      <a href="/success" class="block text-sm font-semibold text-slate-400 hover:text-white transition-colors">Download</a>
    </div>
  </div>
</header>

<script>
  // Check authentication state and update navigation
  function updateNav() {
    const token = localStorage.getItem('pr_manager_token') || localStorage.getItem('pr_manager_token');
    const guestNav = document.getElementById('guest-nav');
    const authNav = document.getElementById('auth-nav');

    if (token) {
      guestNav?.classList.add('hidden');
      authNav?.classList.remove('hidden');
      authNav?.classList.add('flex');
    } else {
      guestNav?.classList.remove('hidden');
      guestNav?.classList.add('flex');
      authNav?.classList.add('hidden');
      authNav?.classList.remove('flex');
    }
  }

  // Handle logout
  document.getElementById('logout-btn')?.addEventListener('click', () => {
    localStorage.removeItem('pr_manager_token');
    localStorage.removeItem('pr_manager_user');
    localStorage.removeItem('pr_manager_token');
    localStorage.removeItem('pr_manager_user');
    window.location.href = '/';
  });

  // Mobile menu toggle
  document.getElementById('mobile-menu-btn')?.addEventListener('click', () => {
    const menu = document.getElementById('mobile-menu');
    menu?.classList.toggle('hidden');
  });

  // Run on load
  updateNav();
</script>

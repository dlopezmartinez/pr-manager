---
const links = {
  product: [
    { name: 'Features', href: '/#features' },
    { name: 'Pricing', href: '/#pricing' },
    { name: 'Download', href: '/success' },
  ],
  legal: [
    { name: 'Privacy Policy', href: '/privacy' },
    { name: 'Terms of Service', href: '/terms' },
  ],
};
---

<footer class="relative border-t border-white/5 bg-dark-100/50 backdrop-blur-xl" role="contentinfo">
  <div class="max-w-7xl mx-auto px-6 py-16">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-12">
      <!-- Brand -->
      <div class="md:col-span-2">
        <a href="/" class="flex items-center gap-3 group mb-6" aria-label="PR Manager - Go to homepage">
          <div class="w-10 h-10 bg-gradient-to-br from-primary to-accent rounded-xl flex items-center justify-center shadow-lg shadow-primary/20">
            <svg class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <circle cx="6" cy="6" r="3" fill="currentColor" stroke="none"/>
              <circle cx="18" cy="18" r="3" fill="currentColor" stroke="none"/>
              <path d="M6 9v6c0 2 2 3 4 3h4" stroke="currentColor" stroke-width="2.5"/>
              <path d="M18 15V9c0-2-2-3-4-3h-1" stroke="currentColor" stroke-width="2.5"/>
            </svg>
          </div>
          <span class="text-2xl font-bold tracking-tight logo-gradient">PR Manager</span>
        </a>
        <p class="text-slate-300 max-w-xs leading-relaxed">
          A powerful desktop app that keeps all your Pull Requests from GitHub and GitLab organized in your menubar.
        </p>

        <!-- Git Provider Icons - Decorative -->
        <div class="flex items-center gap-3 mt-6" aria-hidden="true">
          <div class="w-10 h-10 rounded-full bg-white/5 border border-white/10 flex items-center justify-center hover:bg-white/10 transition-colors">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="w-10 h-10 rounded-full bg-white/5 border border-white/10 flex items-center justify-center hover:bg-white/10 transition-colors">
            <svg class="w-5 h-5 text-orange-400" fill="currentColor" viewBox="0 0 24 24">
              <path d="M22.65 14.39L12 22.13 1.35 14.39a.84.84 0 0 1-.3-.94l1.22-3.78 2.44-7.51A.42.42 0 0 1 4.82 2a.43.43 0 0 1 .58 0 .42.42 0 0 1 .11.18l2.44 7.49h8.1l2.44-7.51A.42.42 0 0 1 18.6 2a.43.43 0 0 1 .58 0 .42.42 0 0 1 .11.18l2.44 7.51L23 13.45a.84.84 0 0 1-.35.94z"/>
            </svg>
          </div>
        </div>
      </div>

      <!-- Product Links -->
      <nav aria-label="Product navigation">
        <h4 class="text-white font-bold uppercase tracking-widest text-xs mb-6">Product</h4>
        <ul class="space-y-4">
          {links.product.map((link) => (
            <li>
              <a href={link.href} class="text-slate-300 hover:text-white focus:text-white transition-colors duration-300">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Legal Links -->
      <nav aria-label="Legal navigation">
        <h4 class="text-white font-bold uppercase tracking-widest text-xs mb-6">Legal</h4>
        <ul class="space-y-4">
          {links.legal.map((link) => (
            <li>
              <a href={link.href} class="text-slate-300 hover:text-white focus:text-white transition-colors duration-300">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-white/5 flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-sm text-slate-400">
        &copy; {new Date().getFullYear()} PR Manager. All rights reserved.
      </p>

      <div class="flex items-center gap-6">
        <a href="https://twitter.com/prmanagerapp" class="text-slate-400 hover:text-white focus:text-white transition-colors" aria-label="Follow us on Twitter">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
        <a href="mailto:hello@prmanager.app" class="text-slate-400 hover:text-white focus:text-white transition-colors" aria-label="Send us an email">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>

---
// PR Manager Landing Page - Home
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import FeaturesShowcase from '../components/FeaturesShowcase.astro';
import Pricing from '../components/Pricing.astro';
import Footer from '../components/Footer.astro';

// Server-render to read BETA_MODE env var at runtime
export const prerender = false;
---

<Layout title="PR Manager - Your Pull Requests, One Click Away | Desktop App for GitHub & GitLab">
  <Header />
  <main id="main-content">
    <Hero />
    <section id="features">
      <FeaturesShowcase />
    </section>
    <Pricing />
  </main>
  <Footer />
</Layout>

---
import ThemeToggle from './ThemeToggle.astro';

const isBetaMode = process.env.BETA_MODE === 'true';
---

<header class="fixed top-0 left-0 right-0 z-50 bg-background/80 backdrop-blur-xl border-b border-border" role="banner">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-[120px] h-14 sm:h-16 md:h-20 grid grid-cols-2 md:grid-cols-3 items-center" aria-label="Main navigation">
    <!-- Logo + Platform Icons -->
    <div class="flex items-center gap-3 sm:gap-4">
      <a href="/" class="flex items-center gap-2 group" aria-label="PR Manager - Go to homepage">
        <div class="w-7 h-7 sm:w-8 sm:h-8 bg-primary rounded-lg flex items-center justify-center shadow-lg shadow-primary/20 group-hover:shadow-primary/40 transition-shadow">
          <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <circle cx="6" cy="6" r="3" fill="currentColor" stroke="none"/>
            <circle cx="18" cy="18" r="3" fill="currentColor" stroke="none"/>
            <path d="M6 9v6c0 2 2 3 4 3h4" stroke="currentColor" stroke-width="2.5"/>
            <path d="M18 15V9c0-2-2-3-4-3h-1" stroke="currentColor" stroke-width="2.5"/>
          </svg>
        </div>
        <span class="text-sm sm:text-base md:text-lg font-semibold text-foreground">PR Manager</span>
        {isBetaMode && (
          <span class="ml-1.5 px-1.5 py-0.5 text-[9px] font-bold tracking-wide text-white bg-gradient-to-r from-indigo-500 to-purple-500 rounded shadow-sm shadow-indigo-500/30">BETA</span>
        )}
      </a>

      <!-- Platform Icons (next to logo) -->
      <div class="hidden sm:flex items-center gap-1.5 pl-2 sm:pl-3 border-l border-border" aria-label="Supports GitHub and GitLab">
        <div class="w-5 h-5 flex items-center justify-center text-foreground-muted">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="w-5 h-5 flex items-center justify-center text-foreground-muted">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M22.65 14.39L12 22.13 1.35 14.39a.84.84 0 0 1-.3-.94l1.22-3.78 2.44-7.51A.42.42 0 0 1 4.82 2a.43.43 0 0 1 .58 0 .42.42 0 0 1 .11.18l2.44 7.49h8.1l2.44-7.51A.42.42 0 0 1 18.6 2a.43.43 0 0 1 .58 0 .42.42 0 0 1 .11.18l2.44 7.51L23 13.45a.84.84 0 0 1-.35.94z"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- Navigation Links (Desktop) - Center column -->
    <div class="hidden md:flex items-center justify-center gap-8 lg:gap-10">
      <a href="/#features" class="text-sm lg:text-[15px] font-medium text-foreground-secondary hover:text-foreground transition-colors duration-200">Features</a>
      <a href="/#pricing" class="text-sm lg:text-[15px] font-medium text-foreground-secondary hover:text-foreground transition-colors duration-200">Pricing</a>
      <a href="/download" class="text-sm lg:text-[15px] font-medium text-foreground-secondary hover:text-foreground transition-colors duration-200">Download</a>
      <a href="/blog" class="text-sm lg:text-[15px] font-medium text-foreground-secondary hover:text-foreground transition-colors duration-200">Blog</a>
    </div>

    <!-- Actions - Right column -->
    <div class="flex items-center justify-end gap-2 sm:gap-3">
      <!-- Theme Toggle -->
      <ThemeToggle />

      <!-- Guest Navigation -->
      <div id="guest-nav" class="flex items-center gap-2 sm:gap-3">
        <a href="/login" class="hidden sm:block text-sm font-medium text-foreground-secondary hover:text-foreground transition-colors">
          Sign In
        </a>
        <a
          href="/signup"
          class="inline-flex items-center justify-center h-7 px-2.5 text-[11px] font-medium rounded-lg bg-primary text-white hover:bg-primary/90 transition-colors sm:h-9 sm:px-4 sm:text-sm"
          aria-label="Start free trial"
        >
          Start Free
        </a>
      </div>

      <!-- Authenticated Navigation -->
      <div id="auth-nav" class="hidden items-center">
        <button
          id="logout-btn"
          class="inline-flex items-center justify-center h-7 px-2.5 text-[11px] font-medium rounded-lg border border-border bg-card text-foreground hover:bg-card/80 transition-colors sm:h-9 sm:px-4 sm:text-sm"
          aria-label="Sign out of your account"
        >
          Sign Out
        </button>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-1.5 text-foreground-secondary hover:text-foreground"
        aria-label="Open navigation menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-border bg-background/95 backdrop-blur-xl" role="menu">
    <div class="px-4 py-3 space-y-1">
      <a href="/#features" class="block px-3 py-2 rounded-lg text-sm font-medium text-foreground-secondary hover:text-foreground hover:bg-card transition-colors" role="menuitem">Features</a>
      <a href="/#pricing" class="block px-3 py-2 rounded-lg text-sm font-medium text-foreground-secondary hover:text-foreground hover:bg-card transition-colors" role="menuitem">Pricing</a>
      <a href="/download" class="block px-3 py-2 rounded-lg text-sm font-medium text-foreground-secondary hover:text-foreground hover:bg-card transition-colors" role="menuitem">Download</a>
      <a href="/blog" class="block px-3 py-2 rounded-lg text-sm font-medium text-foreground-secondary hover:text-foreground hover:bg-card transition-colors" role="menuitem">Blog</a>
      <a href="/login" class="block sm:hidden px-3 py-2 rounded-lg text-sm font-medium text-foreground-secondary hover:text-foreground hover:bg-card transition-colors" role="menuitem">Sign In</a>
    </div>
  </div>
</header>

<script>
  // Check authentication state and update navigation
  function updateNav() {
    const token = localStorage.getItem('pr_manager_token');
    const guestNav = document.getElementById('guest-nav');
    const authNav = document.getElementById('auth-nav');

    if (token) {
      guestNav?.classList.add('hidden');
      authNav?.classList.remove('hidden');
      authNav?.classList.add('flex');
    } else {
      guestNav?.classList.remove('hidden');
      guestNav?.classList.add('flex');
      authNav?.classList.add('hidden');
      authNav?.classList.remove('flex');
    }
  }

  // Handle logout
  document.getElementById('logout-btn')?.addEventListener('click', () => {
    localStorage.removeItem('pr_manager_token');
    localStorage.removeItem('pr_manager_refresh_token');
    localStorage.removeItem('pr_manager_user');
    window.location.href = '/';
  });

  // Mobile menu toggle with accessibility
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn?.addEventListener('click', () => {
    const isExpanded = mobileMenuBtn.getAttribute('aria-expanded') === 'true';
    mobileMenuBtn.setAttribute('aria-expanded', (!isExpanded).toString());
    mobileMenuBtn.setAttribute('aria-label', isExpanded ? 'Open navigation menu' : 'Close navigation menu');
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking a link
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu.classList.add('hidden');
      mobileMenuBtn?.setAttribute('aria-expanded', 'false');
      mobileMenuBtn?.setAttribute('aria-label', 'Open navigation menu');
    });
  });

  // Run on load
  updateNav();
</script>

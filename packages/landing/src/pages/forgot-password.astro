---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Forgot Password - PR Manager" description="Reset your PR Manager password.">
  <Header />
  <main class="pt-32 pb-20 px-6 min-h-screen bg-background">
    <div class="max-w-md mx-auto">
      <div class="text-center mb-10">
        <h1 class="text-4xl font-black text-foreground mb-3">
          Reset your password
        </h1>
        <p class="text-foreground-secondary">
          Enter your email and we'll send you a link to reset your password.
        </p>
      </div>

      <div class="glass-card rounded-3xl p-8">
        <form id="forgot-form" class="space-y-6">
          <div>
            <label for="email" class="block text-sm font-semibold text-foreground mb-2">
              Email address
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="input w-full"
              placeholder="you@example.com"
            />
          </div>

          <div id="error-message" class="hidden p-4 bg-error/10 border border-error/20 rounded-xl text-error text-sm">
          </div>

          <div id="success-message" class="hidden p-4 bg-success/10 border border-success/20 rounded-xl text-success text-sm">
          </div>

          <button
            type="submit"
            id="submit-btn"
            class="w-full py-4 px-6 bg-gradient-to-r from-accent-purple to-accent text-white font-bold rounded-xl hover:shadow-lg hover:shadow-accent-purple/30 transition-all duration-300 disabled:opacity-50 disabled:cursor-not-allowed"
          >
            Send Reset Link
          </button>
        </form>

        <div class="mt-8 text-center">
          <p class="text-sm text-foreground-secondary">
            Remember your password?
            <a href="/login" class="text-accent-purple hover:text-accent-purple/80 font-semibold transition-colors">Sign in</a>
          </p>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  const API_URL = 'https://api.prmanager.app';

  // Redirect authenticated users away from forgot-password page
  const existingToken = localStorage.getItem('pr_manager_token');
  if (existingToken) {
    window.location.href = '/success';
  }

  const form = document.getElementById('forgot-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const errorMessage = document.getElementById('error-message') as HTMLDivElement;
  const successMessage = document.getElementById('success-message') as HTMLDivElement;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    const email = (document.getElementById('email') as HTMLInputElement).value.trim();

    if (!email) {
      showError('Please enter your email address.');
      return;
    }

    submitBtn.disabled = true;
    submitBtn.textContent = 'Sending...';
    hideError();
    hideSuccess();

    try {
      const response = await fetch(`${API_URL}/auth/forgot-password`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ email }),
      });

      // Handle rate limiting - this is safe to show
      if (response.status === 429) {
        showError('Too many requests. Please wait a moment and try again.');
        resetButton();
        return;
      }

      // Handle server errors - network is working but server has issues
      if (response.status >= 500) {
        showError('Something went wrong. Please try again later.');
        resetButton();
        return;
      }

      // Always show success message to prevent email enumeration
      showSuccess('If an account exists with that email, you will receive a password reset link shortly. Please check your inbox.');
      submitBtn.disabled = true;
      submitBtn.textContent = 'Email Sent';
    } catch (error: unknown) {
      // Network error - show error instead of fake success
      if (error instanceof TypeError && error.message.includes('fetch')) {
        showError('Unable to connect to the server. Please check your internet connection.');
      } else {
        showError('Something went wrong. Please try again.');
      }
      resetButton();
    }
  });

  function showError(message: string) {
    errorMessage.textContent = message;
    errorMessage.classList.remove('hidden');
  }

  function hideError() {
    errorMessage.classList.add('hidden');
  }

  function showSuccess(message: string) {
    successMessage.textContent = message;
    successMessage.classList.remove('hidden');
  }

  function hideSuccess() {
    successMessage.classList.add('hidden');
  }

  function resetButton() {
    submitBtn.disabled = false;
    submitBtn.textContent = 'Send Reset Link';
  }
</script>

---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Download PR Manager" description="Download PR Manager for macOS, Windows, and Linux. Start managing your pull requests today.">
  <Header />
  <main id="main-content" class="pt-32 pb-20 px-6 min-h-screen bg-background">
    <div class="max-w-2xl mx-auto text-center">
      <!-- Header -->
      <div class="inline-flex items-center justify-center w-20 h-20 bg-primary/10 rounded-full mb-8">
        <svg class="w-10 h-10 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
        </svg>
      </div>

      <h1 class="text-4xl md:text-5xl font-black text-foreground mb-4">
        Download <span class="gradient-text">PR Manager</span>
      </h1>

      <p class="text-lg text-foreground-secondary mb-12">
        Available for macOS, Windows, and Linux. Free to download, subscription required to unlock all features.
      </p>

      <!-- Loading State -->
      <div id="loading-state" class="glass-card rounded-3xl p-10 mb-8">
        <div class="flex items-center justify-center gap-3">
          <svg class="w-5 h-5 text-primary animate-spin" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          <span class="text-foreground-secondary">Loading latest version...</span>
        </div>
      </div>

      <!-- Download Section -->
      <div id="download-section" class="hidden">
        <div class="glass-card rounded-3xl p-10 mb-8">
          <p id="version-text" class="text-foreground-muted mb-8">Latest version: Loading...</p>

          <div class="grid sm:grid-cols-2 gap-4 mb-8">
            <!-- macOS Download -->
            <a
              href="#"
              id="download-mac"
              class="flex items-center gap-4 p-5 rounded-2xl bg-card border border-border hover:border-primary/50 hover:bg-primary/5 transition-all group"
            >
              <div class="flex-shrink-0 w-14 h-14 bg-primary/10 rounded-xl flex items-center justify-center group-hover:bg-primary/20 transition-colors">
                <svg class="w-8 h-8 text-foreground" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
                </svg>
              </div>
              <div class="text-left">
                <div class="font-bold text-foreground">macOS</div>
                <div class="text-sm text-foreground-muted">Apple Silicon & Intel</div>
              </div>
            </a>

            <!-- Windows Download -->
            <a
              href="#"
              id="download-windows"
              class="flex items-center gap-4 p-5 rounded-2xl bg-card border border-border hover:border-primary/50 hover:bg-primary/5 transition-all group"
            >
              <div class="flex-shrink-0 w-14 h-14 bg-primary/10 rounded-xl flex items-center justify-center group-hover:bg-primary/20 transition-colors">
                <svg class="w-8 h-8 text-foreground" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M3 12V6.75l6-1.32v6.48L3 12zm17-9v8.75l-10 .15V5.21L20 3zM3 13l6 .09v6.81l-6-1.15V13zm17 .25V22l-10-1.91V13.1l10 .15z"/>
                </svg>
              </div>
              <div class="text-left">
                <div class="font-bold text-foreground">Windows</div>
                <div class="text-sm text-foreground-muted">64-bit</div>
              </div>
            </a>
          </div>

          <p class="text-sm text-foreground-muted">
            Linux users: <a href="#" id="download-linux-deb" class="text-primary hover:underline focus:underline">Download .deb</a> or <a href="#" id="download-linux-rpm" class="text-primary hover:underline focus:underline">.rpm</a>
          </p>
        </div>

        <!-- Info -->
        <div class="glass-card rounded-3xl p-8 text-left mb-8">
          <h3 class="text-lg font-bold text-foreground mb-4">Getting Started</h3>
          <ol class="space-y-3 text-foreground-secondary">
            <li class="flex gap-3">
              <span class="flex-shrink-0 w-6 h-6 bg-primary/20 text-primary rounded-full flex items-center justify-center text-sm font-bold">1</span>
              <span>Download and install the app for your platform</span>
            </li>
            <li class="flex gap-3">
              <span class="flex-shrink-0 w-6 h-6 bg-primary/20 text-primary rounded-full flex items-center justify-center text-sm font-bold">2</span>
              <span>Sign in and connect your GitHub or GitLab account</span>
            </li>
            <li class="flex gap-3">
              <span class="flex-shrink-0 w-6 h-6 bg-primary/20 text-primary rounded-full flex items-center justify-center text-sm font-bold">3</span>
              <span>Start your 7-day free trial to unlock all features</span>
            </li>
          </ol>
        </div>

        <!-- CTA -->
        <p class="text-foreground-muted">
          Ready to get started? <a href="/#pricing" class="text-primary hover:underline">View pricing</a> or <a href="/signup" class="text-primary hover:underline">create an account</a>
        </p>
      </div>

      <!-- Error State -->
      <div id="error-state" class="hidden glass-card rounded-3xl p-10 mb-8">
        <div class="text-warning mb-4">
          <svg class="w-10 h-10 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-bold text-foreground mb-2">Unable to load downloads</h3>
        <p class="text-foreground-secondary mb-4">Please try again or download directly from GitHub.</p>
        <a
          href="https://github.com/dlopezmartinez/PR-Manager/releases/latest"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-primary hover:underline"
        >
          View releases on GitHub
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
        </a>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  const API_URL = 'https://api.prmanager.app';

  const loadingState = document.getElementById('loading-state') as HTMLDivElement;
  const downloadSection = document.getElementById('download-section') as HTMLDivElement;
  const errorState = document.getElementById('error-state') as HTMLDivElement;
  const versionText = document.getElementById('version-text') as HTMLParagraphElement;

  const downloadMac = document.getElementById('download-mac') as HTMLAnchorElement;
  const downloadWindows = document.getElementById('download-windows') as HTMLAnchorElement;
  const downloadLinuxDeb = document.getElementById('download-linux-deb') as HTMLAnchorElement;
  const downloadLinuxRpm = document.getElementById('download-linux-rpm') as HTMLAnchorElement;

  async function loadDownloads() {
    try {
      const response = await fetch(`${API_URL}/download/public`);

      if (!response.ok) {
        throw new Error('Failed to fetch downloads');
      }

      const data = await response.json();

      versionText.textContent = `Latest version: ${data.version}`;

      if (data.downloads.mac) {
        downloadMac.href = data.downloads.mac;
      } else {
        downloadMac.classList.add('opacity-50', 'pointer-events-none');
        downloadMac.querySelector('.text-foreground-muted')!.textContent = 'Not available';
      }

      if (data.downloads.windows) {
        downloadWindows.href = data.downloads.windows;
      } else {
        downloadWindows.classList.add('opacity-50', 'pointer-events-none');
        downloadWindows.querySelector('.text-foreground-muted')!.textContent = 'Not available';
      }

      if (data.downloads.linuxDeb) {
        downloadLinuxDeb.href = data.downloads.linuxDeb;
      } else {
        downloadLinuxDeb.classList.add('opacity-50', 'pointer-events-none');
      }

      if (data.downloads.linuxRpm) {
        downloadLinuxRpm.href = data.downloads.linuxRpm;
      } else {
        downloadLinuxRpm.classList.add('opacity-50', 'pointer-events-none');
      }

      // Show download section
      loadingState.classList.add('hidden');
      downloadSection.classList.remove('hidden');

    } catch (error) {
      console.error('Error loading downloads:', error);
      loadingState.classList.add('hidden');
      errorState.classList.remove('hidden');
    }
  }

  loadDownloads();
</script>

{
  "name": "@pr-manager/app",
  "productName": "PR Manager",
  "version": "0.1.82",
  "description": "A beautiful menubar app to manage your Pull Requests across GitHub and GitLab",
  "main": ".vite/build/main.js",
  "scripts": {
    "start": "electron-forge start",
    "dev": "electron-forge start",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint --ext .ts,.tsx .",
    "clean": "rimraf out .vite node_modules/.vite",
    "package": "electron-forge package",
    "package:mac": "electron-forge package --platform darwin --arch arm64",
    "package:mac:x64": "electron-forge package --platform darwin --arch x64",
    "package:win": "electron-forge package --platform win32 --arch x64",
    "package:linux": "electron-forge package --platform linux --arch x64",
    "make": "electron-forge make",
    "make:mac": "electron-forge make --platform darwin --arch arm64",
    "make:mac:x64": "electron-forge make --platform darwin --arch x64",
    "make:win": "electron-forge make --platform win32 --arch x64",
    "make:win:arm64": "electron-forge make --platform win32 --arch arm64",
    "make:linux": "electron-forge make --platform linux --arch x64",
    "make:all": "npm run make:mac && npm run make:win && npm run make:linux",
    "build": "npm run package",
    "build:mac": "npm run package:mac",
    "build:win": "npm run package:win",
    "build:linux": "npm run package:linux",
    "dist": "npm run make",
    "dist:mac": "npm run make:mac",
    "dist:win": "npm run make:win",
    "dist:linux": "npm run make:linux",
    "dist:all": "npm run make:all",
    "deploy": "npm run package:mac && npm run install:mac && npm run open:mac",
    "deploy:test": "npm run kill:mac && sleep 1 && npm run deploy",
    "deploy:dist": "npm run make:mac && npm run kill:mac && npm run install:mac:dmg && npm run open:mac",
    "install:mac": "rm -rf '/Applications/PR Manager.app' && ditto 'out/PR Manager-darwin-arm64/PR Manager.app' '/Applications/PR Manager.app'",
    "install:mac:dmg": "hdiutil attach 'out/make/PR-Manager-*.dmg' -nobrowse && rm -rf '/Applications/PR Manager.app' && ditto '/Volumes/PR Manager/PR Manager.app' '/Applications/PR Manager.app' && hdiutil detach '/Volumes/PR Manager'",
    "open:mac": "open '/Applications/PR Manager.app'",
    "kill:mac": "pkill -9 -f 'PR Manager' || true",
    "sign:mac": "codesign --force --deep --sign - 'out/PR Manager-darwin-arm64/PR Manager.app'",
    "sign:mac:verify": "codesign -vvv '/Applications/PR Manager.app'",
    "release": "npm version patch --no-git-tag-version && npm run make",
    "release:minor": "npm version minor --no-git-tag-version && npm run make",
    "release:major": "npm version major --no-git-tag-version && npm run make",
    "publish": "electron-forge publish",
    "icons:generate": "node scripts/generate-icons.js"
  },
  "keywords": [
    "github",
    "gitlab",
    "pull-requests",
    "merge-requests",
    "menubar",
    "productivity"
  ],
  "author": "Daniel Lopez Martinez",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-dmg": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron-forge/plugin-vite": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@electron/osx-sign": "^2.3.0",
    "@sentry/vite-plugin": "^4.7.0",
    "@testing-library/vue": "^8.1.0",
    "@types/jsdom": "^21.1.7",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/compiler-sfc": "^3.5.26",
    "@vue/test-utils": "^2.4.6",
    "electron": "39.2.7",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "jsdom": "^24.0.0",
    "png2icons": "^2.0.1",
    "rimraf": "^5.0.5",
    "typescript": "~4.5.4",
    "vite": "^5.4.21",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "@sentry/electron": "^7.6.0",
    "@sentry/vue": "^10.36.0",
    "keytar": "^7.9.0",
    "lucide-vue-next": "^0.562.0",
    "vue": "^3.5.26"
  }
}

{
  "name": "@pr-manager/backend",
  "version": "0.1.19",
  "description": "PR Manager Backend API - Authentication and Subscription Management",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "npm run db:migrate:deploy && node dist/index.js",
    "start:no-migrate": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate resolve --applied 20260123122524_initial_schema || true && prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:test:setup": "bash scripts/setup-test-db.sh",
    "db:test:setup:windows": "cmd /c scripts/setup-test-db.cmd",
    "lint": "eslint --ext .ts src/",
    "test": "DATABASE_URL='postgresql://postgres:postgres@localhost:5432/pr_manager_test?schema=public' vitest run",
    "test:watch": "DATABASE_URL='postgresql://postgres:postgres@localhost:5432/pr_manager_test?schema=public' vitest",
    "test:ui": "DATABASE_URL='postgresql://postgres:postgres@localhost:5432/pr_manager_test?schema=public' vitest --ui",
    "test:coverage": "DATABASE_URL='postgresql://postgres:postgres@localhost:5432/pr_manager_test?schema=public' vitest run --coverage",
    "seed:user": "tsx src/cli/seed-user.ts",
    "admin:create-secret": "tsx src/cli/create-admin-secret.ts",
    "admin:secret:list": "tsx src/cli/create-admin-secret.ts list",
    "admin:secret:revoke": "tsx src/cli/create-admin-secret.ts revoke"
  },
  "keywords": [
    "api",
    "subscription",
    "lemonsqueezy",
    "auth"
  ],
  "author": "Daniel Lopez Martinez",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "@sentry/node": "^10.36.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "resend": "^6.8.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.6",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.32.0",
    "prisma": "^6.2.1",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "~5.7.3",
    "vitest": "^4.0.17"
  }
}

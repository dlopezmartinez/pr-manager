---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Sign In - PR Manager" description="Sign in to your PR Manager account.">
  <Header />
  <main class="pt-32 pb-20 px-6 min-h-screen">
    <div class="max-w-md mx-auto">
      <div class="text-center mb-10">
        <h1 class="text-4xl font-black text-white mb-3">
          Welcome back
        </h1>
        <p class="text-slate-400">
          Sign in to your PR Manager account.
        </p>
      </div>

      <div class="glass-card rounded-3xl p-8">
        <form id="login-form" class="space-y-6">
          <div>
            <label for="email" class="block text-sm font-semibold text-slate-300 mb-2">
              Email address
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3.5 rounded-xl bg-white/5 border border-white/10 text-white placeholder-slate-500 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all"
              placeholder="you@example.com"
            />
          </div>

          <div>
            <div class="flex items-center justify-between mb-2">
              <label for="password" class="block text-sm font-semibold text-slate-300">
                Password
              </label>
              <a href="/forgot-password" class="text-sm text-primary hover:text-primary/80 transition-colors">
                Forgot password?
              </a>
            </div>
            <input
              type="password"
              id="password"
              name="password"
              required
              class="w-full px-4 py-3.5 rounded-xl bg-white/5 border border-white/10 text-white placeholder-slate-500 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all"
              placeholder="Enter your password"
            />
          </div>

          <div id="error-message" class="hidden p-4 bg-red-500/10 border border-red-500/20 rounded-xl text-red-400 text-sm">
          </div>

          <button
            type="submit"
            id="submit-btn"
            class="w-full py-4 px-6 bg-gradient-to-r from-primary to-accent text-white font-bold rounded-xl hover:shadow-lg hover:shadow-primary/30 transition-all duration-300 disabled:opacity-50 disabled:cursor-not-allowed"
          >
            Sign In
          </button>
        </form>

        <div class="mt-8 text-center">
          <p class="text-sm text-slate-400">
            Don't have an account?
            <a href="/signup" class="text-primary hover:text-primary/80 font-semibold transition-colors">Create one</a>
          </p>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  const API_URL = 'https://api.prmanager.app';

  // Get redirect URL from params (optional)
  const urlParams = new URLSearchParams(window.location.search);
  const redirectTo = urlParams.get('redirect') || '/success';

  const form = document.getElementById('login-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const errorMessage = document.getElementById('error-message') as HTMLDivElement;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    const email = (document.getElementById('email') as HTMLInputElement).value.trim();
    const password = (document.getElementById('password') as HTMLInputElement).value;

    if (!email || !password) {
      showError('Please fill in all fields.');
      return;
    }

    submitBtn.disabled = true;
    submitBtn.textContent = 'Signing in...';
    hideError();

    try {
      const response = await fetch(`${API_URL}/auth/login`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ email, password }),
      });

      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.error || 'Invalid credentials');
      }

      // Store token in localStorage
      localStorage.setItem('pr_manager_token', data.token);
      localStorage.setItem('pr_manager_user', JSON.stringify(data.user));

      // Redirect to the specified URL or success page
      window.location.href = redirectTo;
    } catch (error: any) {
      showError(error.message || 'Something went wrong. Please try again.');
      submitBtn.disabled = false;
      submitBtn.textContent = 'Sign In';
    }
  });

  function showError(message: string) {
    errorMessage.textContent = message;
    errorMessage.classList.remove('hidden');
  }

  function hideError() {
    errorMessage.classList.add('hidden');
  }
</script>
